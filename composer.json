{
    "name": "popphp/pop-view",
    "description": "Pop View Component for Pop PHP Framework",
    "keywords": [
        "view",
        "view template",
        "template",
        "php",
        "pop",
        "pop php"
    ],
    "homepage": "https://github.com/popphp/pop-view",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Nick Sagona",
            "email": "dev@noladev.com",
            "homepage": "https://www.popphp.org/"
        }
    ],
    "require": {
        "php": ">=8.3.0",
        "popphp/pop-filter": "^4.0.3",
        "popphp/pop-utils": "^2.3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.0.0"
    },
    "autoload": {
        "psr-4": {
            "Pop\\View\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pop\\View\\Test\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "4.0.x-dev"
        }
    }
}
